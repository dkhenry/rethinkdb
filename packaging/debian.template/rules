#!/usr/bin/make -f
# Copyright 2013 hello-debhelper project (used according to license) with modifications by RethinkDB
# Note that much of the explicit option passing is unnecessary due to MAKEFLAGS. The intent is to track the variables of importance and to provide the opportunity to isolate via env -i in the future.

package?=$(shell cat debian/control | grep '^Source:' | awk '{ printf "%s" , $$2 }')
DEBUG?=0
AUTOCHAIN?=1

ifneq ($(shell echo "$(package)" | grep '[A-Za-z0-9]-portable'),)
BUILD_PORTABLE?=1
FORCE_INTERNAL_TOOLS?=1
RT_FORCE_NATIVE?=1
else
BUILD_PORTABLE?=0
RT_FORCE_NATIVE?=0
endif

clean:
	dh_clean
	if [ -e build ] ; then rm -rf build ; fi ;
	[ ! -f Makefile ] || $(MAKE) distclean

install: build
	dh_clean
	dh_installdirs
	$(MAKE) DEBUG=$(DEBUG) AUTOCHAIN=$(AUTOCHAIN) prefix=/usr DESTDIR=$(CURDIR)/debian/$(package) BUILD_DRIVERS=0 BUILD_PORTABLE=$(BUILD_PORTABLE) FORCE_INTERNAL_TOOLS=$(FORCE_INTERNAL_TOOLS) RT_FORCE_NATIVE=$(RT_REDUCE_NATIVE) install

build:
	$(MAKE) DEBUG=$(DEBUG) AUTOCHAIN=$(AUTOCHAIN) prefix=/usr DESTDIR=$(CURDIR)/debian/$(package) BUILD_PORTABLE=$(BUILD_PORTABLE) BUILD_DRIVERS=0 FORCE_INTERNAL_TOOLS=$(FORCE_INTERNAL_TOOLS) RT_FORCE_NATIVE=$(RT_FORCE_NATIVE)
	touch build

binary-indep: install

binary-arch: install
	dh_installdocs -a
	dh_installchangelogs -a
	dh_strip --dbg-package=$(package)-dbg
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch

.PHONY: binary binary-arch binary-indep clean install build

